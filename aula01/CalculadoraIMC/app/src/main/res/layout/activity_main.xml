<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="0dp">

    <TextView
            android:id="@+id/textView3"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:text="Idade"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#673AB7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.148" />

    <EditText
            android:layout_width="129dp"
            android:layout_height="54dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/IdadeID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:text="Altura"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#673AB7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.868" />

    <EditText
            android:layout_width="129dp"
            android:layout_height="54dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/AlturaID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:text="Peso"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#673AB7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.264"
            app:layout_constraintHorizontal_bias="0.148"
            android:id="@+id/textView8" />

    <EditText
            android:layout_width="129dp"
            android:layout_height="54dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/PesoID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:text="Sexo"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#673AB7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.264"
            app:layout_constraintHorizontal_bias="0.868" />

    <CheckBox
            android:text="Homem"
            android:layout_width="145dp"
            android:layout_height="51dp"
            android:id="@+id/HomemID"
            android:checked="false"
            android:duplicateParentState="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="192dp" />

    <CheckBox
            android:text="Mulher"
            android:layout_width="138dp"
            android:layout_height="49dp"
            android:id="@+id/MulherID"
            android:checked="false"
            android:duplicateParentState="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.897"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="224dp" />

    <TextView
            android:layout_width="387dp"
            android:layout_height="96dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#673AB7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ResultadoID"
            app:layout_constraintTop_toBottomOf="@+id/MulherID"
            app:layout_constraintVertical_bias="0.155" />

    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonEnviar"
            app:layout_constraintTop_toBottomOf="@+id/ResultadoID"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.503" />

    <Button
            android:backgroundTint="#2A27F5"
            android:text="Limpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonLimpar"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/buttonEnviar"
            app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>